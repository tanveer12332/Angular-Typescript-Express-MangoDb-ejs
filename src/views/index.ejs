
       <% include header.ejs %>
        <div ng-controller="AppCtrl">
            <div class="row">
                <!-- Page Header -->
                <div class="col-lg-12">
                    <h1 class="page-header">Dashboard</h1>
                </div>
                <!--End Page Header -->
            </div>
            <div class="row">
                <div class="col-lg-12">
                    <!-- Advanced Tables -->
                    <div class="panel panel-default">
                        <div class="panel-heading">
                             Friends Information Table
                        </div>
                        
                        <div class="panel-body">
                            <button class="btn btn-primary pull-right" ng-click='showModel()'>
                                    Add User
                            </button>
                            <div class="clearfix"></div>
                            <div class="well-sm"></div>  
                            <% include addUserModel %>
                            <div class="table-responsive">
                                <table class="table table-striped table-bordered">
                                    <thead>
                                        <tr>
                                            <th>Name</th>
                                            <th>Email</th>
                                            <th>Phone</th>
                                            <th>Address</th>
                                            <th>City</th>
                                            <th>Country</th>
                                            <th>Designation</th>
                                            <th colspan="2">Action</th>
                                        </tr>
                                     </thead>
                                     <tbody>
                                        <tr ng-repeat="contact in contactList">
                                                <td>{{contact.name}}</td>
                                                <td>{{contact.email}}</td>
                                                <td>{{contact.phone}}</td>
                                                <td>{{contact.address}}</td>
                                                <td>{{contact.city}}</td>
                                                <td>{{contact.country}}</td>
                                                <td>{{contact.designation}}</td>
                                                <td><a href="javascript:void(0)"  ng-really-message="Are you sure"? ng-really-click="remove(contact._id)"><i class="fa fa-remove"></i></a></td>
                                                <td><a href="javascript:void(0)" ng-click='edit(contact._id)'><i class="fa fa-pencil"></i></a></td>
                                        </tr>
                                     </tbody>
                                        <tfoot>
                                        <tr>
                                        <td colspan="9" align="center"><pagination total-items="totalItems" ng-model="currentPage" ng-change="pageChanged()"></pagination></td>
                                        </tr>
                                        </tfoot>
                                </table>
                            </div>
                        </div><!--end panel-body-->
                    </div><!--end panel-default-->
                </div><!--end colum-->
            </div><!--end row-->

       </div>     

         
<% include footer.ejs %>

     
