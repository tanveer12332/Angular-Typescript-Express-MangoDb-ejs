                        <label>Address</label>
                        <input class="form-control" ng-model="contact.address" placeholder="Enter your address">
                    </div>
                </div>
                <div class="col-sm-6">
                    <div class="form-group">
                        <label>City</label>
                        <input class="form-control" ng-model="contact.city" placeholder="Enter your city">
                    </div>
                </div>
                <div class="col-sm-6">
                    <div class="form-group">
                        <label>Country</label>
                        <input class="form-control" ng-model="contact.country" placeholder="Enter your country">
